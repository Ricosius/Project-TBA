@model Formule1.Models.ProfileViewModel
@using Microsoft.AspNet.Identity;
@using System.Web.Security;         

@{
    Layout = null;
    var userid = @User.Identity.GetUserId();
}

@if (Model == null)
{
    <!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <h2>@User.Identity.GetUserId()</h2>
        <div class="form-horizontal">
            <h4>ProfileViewModel</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.Hidden("UserNameID",(object)userid)

       
            
            <div class="form-group">
                Teamname
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TeamName)
                    @Html.ValidationMessageFor(model => model.TeamName)
                </div>
            </div>
    
            <div class="form-group">
                Engine
                <div class="col-md-10">
             
                         @Html.DropDownListFor(model => model.EngineID, new SelectList(ViewBag.Engine, "ID", "Name","Money"), "Select an Engine")
                </div>
            </div>
    
            <div class="form-group">
                Driver
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.DriverID, new SelectList(ViewBag.Driver, "ID", "Name", "Money"), "Select a Driver")
                </div>
            </div>

            <div class="form-group">
               Second Driver
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.SecondDriverID, new SelectList(ViewBag.Driver2, "ID", "Name", "Money"), "Select a second Driver")
                </div>
            </div>
    
            <div class="form-group">
               Chassis
                <div class="col-md-10">

                    @Html.DropDownListFor(model => model.ChassisID, new SelectList(ViewBag.Chassis, "ID", "Name", "Money"), "Select a Chassis")
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
    
}
else
{
    <h1>You can only create 1 profile</h1>
}

